@page "/products/{id:guid}/edit"
@using System.Text.Json
@using HomeStorage.Web.Model
@inject HttpClient _httpClient;

<h3>ProductEdit</h3>

@if (_product is not null)
{
    <EditForm Model="_product">
        <div class="row mb-6">
            <div class="col-2">
                <label class="col-form-label">@nameof(_product.Name)</label>
            </div>
            <div class="col-6">
                <InputText @bind-Value="_product.Name.Value" class="form-control"></InputText>
            </div>
        </div>
        <div class="row mb-6">
            <div class="col-2">
                <label class="col-form-label">@nameof(_product.Description)</label>
            </div>
            <div class="col-6">
                <InputText @bind-Value="_product.Description.Value" class="form-control"></InputText>
            </div>
        </div>
    </EditForm>
}


<a href="/products">
    <button>Back to Products</button>
</a>


@code {
    [Parameter]
    public Guid? Id { get; set; }

    private Product? _product;

    protected override async Task OnParametersSetAsync()
    {
        await base.OnParametersSetAsync();
        var response = await _httpClient.GetAsync($"/products/{Id}");

        if (response.IsSuccessStatusCode)
        {
            var content = await response.Content.ReadAsStringAsync();
            _product = JsonSerializer.Deserialize<Product>(content);
        }
    }
}